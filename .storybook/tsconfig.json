{
    "extends": "../tsconfig.json",
    "compilerOptions": {
        "types": ["node"],
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "moduleResolution": "bundler",
        "baseUrl": "../src",
        "paths": {
            "@app/*": ["app/*"],
            "@core/*": ["app/core/*"],
            "@shared/*": ["app/shared/*"],
            "@env/*": ["environments/*"]
        }
    },
    "exclude": ["../src/**/*.spec.ts"],
    "include": ["../src/**/*.stories.*", "./preview.ts", "../src/**/*.d.ts", "../src/polyfills.ts"]
}
