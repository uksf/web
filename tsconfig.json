{
    "compileOnSave": false,
    "compilerOptions": {
        "importHelpers": true,
        "module": "es2020",
        "outDir": "./dist/out-tsc",
        "baseUrl": "src",
        "paths": {
            "@app/*": ["app/*"],
            "@core/*": ["app/core/*"],
            "@shared/*": ["app/shared/*"],
            "@env/*": ["environments/*"]
        },
        "sourceMap": true,
        "declaration": false,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "target": "es2021",
        "typeRoots": [
            "node_modules/@types"
        ],
        "lib": [
            "es2018",
            "dom"
        ],
        "useDefineForClassFields": false,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true
    },
    "include": [
        "src/main.ts",
        "src/polyfills.ts"
    ]
}
